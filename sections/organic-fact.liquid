<!-- fact sec start -->
{% if section.settings.enable_section %}
  <section class="fact-sec">
    <div class="container">
      <div class="row">
        {% for block in section.blocks %}
          <div class="col-lg-3 col-md-6">
            <div class="fact-item">
              <div class="fact-content">
                {% if block.settings.fact_heading != blank %}
                  <h2>
                    {{ block.settings.fact_heading }}
                  </h2>
                {% endif %}
                <a href="{{ block.settings.fact_button_link }}">
                  {{- block.settings.fact_button | default: 'Check Fact' -}}
                </a>
              </div>
              {% if block.settings.fact_img != blank %}
                <div class="fact-img">
                  <img
                    src="{{ block.settings.fact_img | img_url: 'master' }}"
                    alt=""
                    width=""
                    height=""
                  >
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
<!-- fact sec end -->
{% schema %}
{
    "name": "Organic Fact",
    "class": "organic-fact",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_section",
            "label": "Enable Section",
            "default": true,
            "info": "Check to enable the fact section."
        }
    ],
    "blocks": [
        {
            "name": "Facts",
            "type": "Text",
            "settings": [
                {
                    "type": "textarea",
                    "id": "fact_heading",
                    "label": "Fact Heading",
                    "info": "Enter the heading for the fact.",
                    "default": "Your <span>oil & floor cleaner</span> share a common friend, PFASs!"
                },
                {
                    "type": "text",
                    "id": "fact_button",
                    "label": "Fact Button Text",
                    "default": "Check Fact",
                    "info": "Enter the text for the fact button."
                },
                {
                    "type": "url",
                    "id": "fact_button_link",
                    "label": "Fact Button Link",
                    "info": "Enter the URL the fact button should link to."
                },
                {
                    "type": "image_picker",
                    "id": "fact_img",
                    "label": "Fact Image",
                    "info": "Select the image for the fact."
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Organic Fact",
            "category": "Text"
        }
    ]
}
{% endschema %}
