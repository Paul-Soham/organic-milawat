<!-- faq sec start -->
<section class="faq-sec">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="title-heading-2">
          {% if section.settings.faq_text != blank %}
            <h2>{{ section.settings.faq_text }}</h2>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="faq-content">
          <div class="accordion accordion-flush" id="accordionFlushExample5">
            {% for block in section.blocks %}
              <div class="accordion-item">
                <h2 class="accordion-header" id="flush-heading{{ forloop.index }}">
                  <button
                    class="accordion-button collapsed"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#flush-collapse{{ forloop.index }}"
                    aria-expanded="false"
                    aria-controls="flush-collapse{{ forloop.index }}"
                  >
                    {{ block.settings.faq_question }}
                  </button>
                </h2>
                <div
                  id="flush-collapse{{ forloop.index }}"
                  class="accordion-collapse collapse"
                  aria-labelledby="flush-heading{{ forloop.index }}"
                  data-bs-parent="#accordionFlushExample5"
                >
                  <div class="accordion-body">{{ block.settings.faq_answer }}</div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        {% if section.settings.enable_image %}
          {% if section.settings.faq_section_image != blank %}
            <div class="faq-img">
              <img src="{{ section.settings.faq_section_image | img_url: 'master' }}" alt="" width="" height="">
            </div>
          {% endif %}
        {% endif %}
        {% if section.settings.enable_video %}
          {% if section.settings.faq_section_video != blank %}
            <!-- controls -->
            <div class="faq-img">
              <video loop muted playsinline  autoplay="true" width="" height="">
                <source src="{{ section.settings.faq_section_video.sources[0].url }}" type="video/mp4">
              </video>
            </div>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
</section>
<!-- faq sec end -->

{% schema %}
{
    "name": "Organic FAQ",
    "class": "organic-faq",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_section",
            "label": "Enable Section",
            "default": true,
            "info": "Check to enable the FAQ section."
        },
        {
            "type": "text",
            "id": "faq_text",
            "label": "FAQ Heading",
            "default": "FAQs",
            "info": "Add the heading for the FAQ section."
        },
        {
            "type": "checkbox",
            "id": "enable_image",
            "label": "Enable Image",
            "info": "Check to enable the image."
        },
        {
            "type": "image_picker",
            "id": "faq_section_image",
            "label": "FAQ Section Image",
            "info": "Add an image for the FAQ section."
        },
        {
            "type": "checkbox",
            "id": "enable_video",
            "label": "Enable Video",
            "info": "Check to enable the video."
        },
        {
            "type": "video",
            "id": "faq_section_video",
            "label": "FAQ Section Video",
            "info": "Add an video for the FAQ section."
        }
    ],
    "blocks": [
        {
            "name": "FAQ",
            "type": "text",
            "settings": [
                {
                    "type": "text",
                    "id": "faq_question",
                    "label": "FAQ Question",
                    "default": "How can I be sure that your food is truly organic?",
                    "info": "Add the question for the FAQ."
                },
                {
                    "type": "textarea",
                    "id": "faq_answer",
                    "label": "FAQ Answer",
                    "default": "Placeholder content for this accordion.",
                    "info": "Add the answer for the FAQ."
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Organic FAQ",
            "category": "Text"
        }
    ]
}
{% endschema %}
