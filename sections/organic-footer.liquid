<!-- footer sec start -->
<footer class="footer-sec">
  <div class="container">
    <div class="row">
      <div class="col-xl-3 col-lg-3">
        <div class="footer-widget">
          <div class="footer-logo">
            <a href="/">
              <img src="{{ section.settings.footer_logo | img_url: 'master' }}" alt="" width="" height="">
            </a>
          </div>
          <div class="footer-news">
            {% form 'customer', class: 'newsletter-form' %}
              <div class="form-group">
                <p>Subscribe to our newsletter</p>

                <input type="hidden" name="contact[tags]" value="newsletter">
                <input
                  type="email"
                  class="form-control"
                  id="exampleInputEmail1"
                  name="email"
                  name="contact[email]"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  placeholder="Enter your email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="Newsletter-error--{{ section.id }}"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="Newsletter-success--{{ section.id }}"
                  {% endif %}
                  required
                >
              </div>

              <button
                type="submit"
                id="Subscribe"
                aria-label="{{ 'newsletter.button_label' | t }}"
                class="btn btn-primary news-btn"
              >
                Subscribe
              </button>
            {% endform %}
          </div>
        </div>
      </div>
      <div class="col-xl-6 col-lg-9">
        <div class="footer-link">
          <ul>
            {%- for link in section.settings.footer_menu_one.links -%}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="col-xl-3 col-lg-4 col-md-6">
        <div class="footer-widget-2">
          <div class="footer-link-2">
            <ul>
              {%- for link in section.settings.footer_menu_two.links -%}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
          <div class="footer-social">
            <p>Follow Us</p>
            <ul>
              <li>
                <a href="{{ settings.social_facebook_link }}">
                  <img
                    src="https://cdn.shopify.com/s/files/1/0623/4442/9811/files/facebook.png"
                    alt=""
                    width=""
                    height=""
                  >
                </a>
              </li>
              <li>
                <a href="{{ settings.social_instagram_link }}">
                  <img src="https://cdn.shopify.com/s/files/1/0623/4442/9811/files/insta.png" alt="" width="" height="">
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
<!-- footer sec end -->
{% schema %}
{
  "name": "Organic Footer",
  "class": "organic-footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_section",
      "label": "Enable Section",
      "default": true,
      "info": "Check to enable the section."
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo",
      "info": "Add a footer logo here"
    },
    {
      "type" : "link_list",
      "id" : "footer_menu_one",
      "label" : "Menu One"
    },
    {
      "type":"link_list",
      "id":"footer_menu_two",
      "label":"Menu Two"
    }
  ],
  "presets": [
    {
      "name": "Organic Footer",
      "category": "Text"
    }
  ]
}
{% endschema %}
